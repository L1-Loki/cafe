<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardBackgroundColor="@color/lightwhite"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_customtable_TenBanAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_customtable_BanAn"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_below="@id/txt_customtable_TenBanAn"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner_border_primary"
            android:src="@drawable/ic_baseline_event_seat_40" />

        <ImageView
            android:id="@+id/img_customtable_GoiMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_customtable_BanAn"
            android:layout_alignStart="@id/img_customtable_BanAn"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_border_primary"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_fastfood_24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_customtable_ThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_customtable_BanAn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_border_primary"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_payments_24"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_customtable_AnNut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_customtable_BanAn"
            android:layout_alignEnd="@id/img_customtable_BanAn"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner_border_primary"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_backspace_24"
            android:visibility="invisible" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
